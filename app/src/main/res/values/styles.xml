<resources>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="paddingStart">@dimen/_2sdp</item>
        <item name="android:textColor">@color/uvv_gray</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="itemIconPadding">8dp</item>
        <item name="paddingStart">@dimen/_20sdp</item>
    </style>

    <style name="primary_button">
        <item name="android:textSize">13dp</item>
        <item name="android:layout_height">@dimen/button_width</item>
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:layout_marginBottom">8.0dip</item>
        <item name="cornerRadius">8.0dip</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MaterialComponents.TabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">?colorSurface</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
        <item name="tabIconTint">@color/mtrl_tabs_icon_color_selector</item>
        <item name="tabIndicatorAnimationDuration">@integer/mtrl_tab_indicator_anim_duration_ms
        </item>
        <item name="tabIndicatorColor">?colorPrimary</item>
        <item name="tabRippleColor">@color/mtrl_tabs_ripple_color</item>
        <item name="tabTextAppearance">?textAppearanceButton</item>
        <item name="tabTextColor">@color/mtrl_tabs_icon_color_selector</item>
        <item name="tabUnboundedRipple">true</item>
    </style>

    <style name="LoginBottomDialogTheme" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NewPrimaryButtonStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/button_text_state_colors</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">56.0dip</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="backgroundTint">@color/color_states_material_button</item>
        <item name="cornerRadius">12.0dip</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NewOutlinedEditBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">56.0dip</item>
        <item name="android:layout_marginTop">16.0dip</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:layout_marginStart">24.0dip</item>
        <item name="android:layout_marginEnd">24.0dip</item>
        <item name="boxCornerRadiusBottomEnd">12.0dip</item>
        <item name="boxCornerRadiusBottomStart">12.0dip</item>
        <item name="boxCornerRadiusTopEnd">12.0dip</item>
        <item name="boxCornerRadiusTopStart">12.0dip</item>
        <item name="boxStrokeColor">@color/outlined_edit_box_stroke_color</item>
        <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="heading_text">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/heading_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16.0dip</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">16.0dip</item>
    </style>

    <style name="DialogThemeFull" parent="android:Theme.Dialog">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="primary_button_new">
        <item name="android:textSize">14.0sp</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">@dimen/button_width</item>
        <item name="android:layout_marginTop">16.0dip</item>
        <item name="android:layout_marginBottom">16.0dip</item>
        <item name="android:layout_marginStart">24.0dip</item>
        <item name="android:layout_marginEnd">24.0dip</item>
        <item name="cornerRadius">8.0dip</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NewSecondaryStyleButton">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/text_color_states_secondary_material_button</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">56.0dip</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">8.0dip</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="strokeColor">@color/stroke_state_secondary_material_button</item>
        <item name="strokeWidth">1.0dip</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/black</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:itemPadding">16dp</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style parent="ThemeOverlay.AppCompat.Dialog.Alert" name="TrackSelectionDialogThemeOverlay">

        <item name="windowNoTitle">false</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:immersive">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="background">@drawable/ripple</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="background">@drawable/ripple</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
