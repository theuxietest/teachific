<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    app:cardBackgroundColor="@color/card_back"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/img_assignment_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/purple_circular_bg"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/assignment_test_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_3sdp">

                        <com.so.luotk.customviews.CustomSemiBoldFontTextView
                            android:id="@+id/tv_topic_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="2"
                            android:text="Real Number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tv_submitted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/lato"
                            android:padding="@dimen/_4sdp"
                            android:text=""
                            android:textColor="@color/green"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_objective_subjective"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/_4sdp"
                        android:text="Subjective"
                        android:textColor="@color/blue_main"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/tv_batch_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:text="Real Number"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_sub_topic_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/deadline"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_assign_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apr 20,2020"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_assign_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/lato"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="05:28 PM"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_11sdp" />


                    </LinearLayout>

                    <!-- <com.smartowls.smartowls.customviews.CustomFontTextView
                         android:id="@+id/tv_duration"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="@dimen/_18sdp"
                         android:paddingVertical="@dimen/_4sdp"
                         android:text=" "
                         android:textColor="@color/gray"
                         android:textSize="@dimen/_11sdp"
                         android:visibility="gone" />-->


                    <!--   <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center_vertical"
                           android:orientation="horizontal">


                           <ImageView
                               android:layout_width="@dimen/_14sdp"
                               android:layout_height="@dimen/_14sdp"
                               android:src="@drawable/ic_clock_gray" />

                           <com.smartowls.smartowls.customviews.CustomFontTextView
                               android:id="@+id/tv_assign_time"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="5dp"
                               android:layout_marginRight="20dp"
                               android:text="05:28 PM"
                               android:textColor="@color/gray"
                               android:textSize="14sp" />


                           <ImageView
                               android:layout_width="@dimen/_14sdp"
                               android:layout_height="@dimen/_14sdp"
                               android:layout_marginLeft="20dp"
                               android:src="@drawable/ic_calendar_gray" />

                           <com.smartowls.smartowls.customviews.CustomFontTextView
                               android:id="@+id/tv_assign_date"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="@dimen/_6sdp"
                               android:text="Apr 20,2020"
                               android:textColor="@color/gray"
                               android:textSize="14sp" />
                       </LinearLayout>-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/new_item_dot"
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:src="@color/light_red"
                        android:visibility="gone" />
                </LinearLayout>



                <ImageView
                    android:id="@+id/img_right_arrow_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_side_arrow__1" />

                <RelativeLayout
                    android:id="@+id/threeDotsLay"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp">
                    <ImageView
                        android:id="@+id/threeDots"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_three_dots" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_locked_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_11sdp"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:alpha="0.7"
                android:src="#CFCFCF" />

            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"

                android:src="@drawable/ic_padlock" />

        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
