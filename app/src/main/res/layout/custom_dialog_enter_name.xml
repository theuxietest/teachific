<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_marginHorizontal="@dimen/_16sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.so.luotk.customviews.CustomBoldFontTextView
        android:id="@+id/text_add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:padding="@dimen/_8sdp"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Add Study Material File"
        android:textColor="@color/black" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_file_name_lay"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:hint="@string/enter_file_name"
        app:boxBackgroundColor="@color/card_back"
        app:boxStrokeColor="@color/gray"
        app:boxStrokeWidth="1dp"
        app:hintTextColor="@color/gray"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:textColor="@color/black"

            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit"
        style="@style/primary_button"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:enabled="true"
        android:backgroundTint="@color/blue_main"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="@string/submit"
        app:strokeWidth="0dp" />


</LinearLayout>