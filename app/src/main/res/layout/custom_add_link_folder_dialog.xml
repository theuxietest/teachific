<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.so.luotk.customviews.CustomFontTextView
        android:id="@+id/text_add_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_12sdp"
        android:text="Add study material link"
        android:textColor="@color/black" />

    <com.so.luotk.customviews.CustomFontEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:background="@drawable/bg_flag_box"
        android:hint="Enter name here"
        android:visibility="visible"
        android:id="@+id/edt_link_folder_name"
        android:padding="@dimen/_6sdp" />

    <com.so.luotk.customviews.CustomFontEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:background="@drawable/bg_flag_box"
        android:hint="Enter/paste url here"
        android:id="@+id/edt_enter_link"
        android:padding="@dimen/_6sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_12sdp">

        <com.so.luotk.customviews.CustomFontTextView
            android:id="@+id/txt_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/round_edge"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Cancel"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/_12sdp" />

        <com.so.luotk.customviews.CustomFontTextView
            android:id="@+id/txt_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/round_edge"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Save"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

</LinearLayout>
